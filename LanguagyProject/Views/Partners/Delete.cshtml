@model PartnersVM;
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="">
    <div class="">
        <h2>Delete </h2>

        <form asp-controller="Partners" asp-action="Delete" class="form-group ">
            <div asp-validation-summary="All;" class="text-danger"></div>
            <input type="hidden" asp-for="Id" disabled class="form-control" />
            <input type="hidden" asp-for="PartnersLogoUrl" disabled class="form-control" />
           
            <label>Image</label>
            <div style="width:150px;Height:150px">
                <img src="~/Uploads/Partners/@Model.PartnersLogoUrl" alt="Card image cap" style="width:100%; height:100% ; border-radius:5px">
            </div>
            <br />
            <br />

            <center>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-controller="Partners" asp-action="Edite" asp-route-id="@Model.Id" class="btn btn-primary">Edite</a>

            </center>
            <br />   <br />
        </form>
        <center>
            <a asp-controller="Partners" asp-action="Index" class="btn btn-success">Back</a>
        </center>
    </div>
</section>

