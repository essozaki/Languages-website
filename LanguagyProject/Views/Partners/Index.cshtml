@model IEnumerable<PartnersVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN: Content-->
<div class="content-overlay"></div>
<div class="header-navbar-shadow"></div>
<div class="">
    <div class="content-header row">
        <div class="content-header-left col-md-9 col-12 mb-2">
            <div class="row breadcrumbs-top">
                <div class="col-12">
                    <h2 class="content-header-title float-left mb-0">Partners Section</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="content-body">
        <div class="dt-buttons btn-group">
            <a asp-action="Create" asp-controller="Partners" class="btn btn-outline-primary" style="margin:20px">
                <span><i class="feather icon-plus"></i></span>
            </a>
        </div>
        <div class="table-responsive">
            <table class="table data-thumb-view">
                <thead>
                    <tr>
                        <th></th>
                        <th class="col-md-2">Partner logo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td style="width:50px; height:50px">
                                <img src="~/Uploads/Partners/@item.PartnersLogoUrl" style="width:100%; height:100% ; border-radius:5px" />
                            </td>
                            <td class="product-action">
                                <a asp-action="Edite" asp-controller="Partners" asp-route-id="@item.Id">
                                    <span class="action-edit"><i class="feather icon-edit"></i></span>
                                </a>
                                <a asp-action="Delete" asp-controller="Partners" asp-route-id="@item.Id">
                                    <span class="action-delete"><i class="feather icon-trash"></i></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

